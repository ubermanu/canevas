{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "es2018",
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "removeComments": true,
    "strict": true,
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "docs",
    "dist",
    "types"
  ],
  "typedocOptions": {
    "name": "Canevas",
    "includeVersion": true,
    "readme": "none",
    "entryPoints": [
      "src/index.ts"
    ],
    "out": "docs"
  }
}
